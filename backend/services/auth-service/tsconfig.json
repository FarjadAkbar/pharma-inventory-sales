{
    "extends":  "../../tsconfig.json",
    "compilerOptions":  {
                            "module":  "commonjs",
                            "moduleResolution":  "node",
                            "declaration":  true,
                            "removeComments":  true,
                            "emitDecoratorMetadata":  true,
                            "experimentalDecorators":  true,
                            "esModuleInterop":  true,
                            "allowSyntheticDefaultImports":  true,
                            "target":  "es2017",
                            "sourceMap":  true,
                            "outDir":  "./dist",
                            "baseUrl":  "./",
                            "incremental":  true,
                            "paths": {
                                "@pharma/core/*": ["../../packages/core/dist/*", "../../packages/core/dist/*/index"],
                                "@pharma/utils/*": ["../../packages/utils/dist/*", "../../packages/utils/dist/*/index"],
                                "@pharma/infra/*": ["../../packages/infra/dist/*", "../../packages/infra/dist/*/index"],
                                "@pharma/libs/*": ["../../packages/libs/dist/*", "../../packages/libs/dist/*/index"]
                            }
                        },
    "include":  [
                    "src/**/*"
                ],
    "exclude":  [
                    "node_modules",
                    "dist"
                ]
}
