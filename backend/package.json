{
  "name": "nestjs-boilerplate-microservice-api",
  "version": "1.0.0",
  "description": "NestJs boilerplate api",
  "author": "mike.rodrigues.lima@gmail.com",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build:core": "pnpm --filter @pharma/core build",
    "build:infra": "pnpm --filter @pharma/infra build",
    "build:libs": "pnpm --filter @pharma/libs build",
    "build:utils": "pnpm --filter @pharma/utils build",
    "build": "pnpm -r build",
    "start:dev:gateway": "pnpm --filter api-gateway start:dev",
    "start:dev:services": "concurrently \"pnpm --filter auth-service start:dev\" \"pnpm --filter users-service start:dev\" \"pnpm --filter roles-service start:dev\" \"pnpm --filter permissions-service start:dev\" \"pnpm --filter sites-service start:dev\" \"pnpm --filter suppliers-service start:dev\" \"pnpm --filter drugs-service start:dev\" \"pnpm --filter raw-materials-service start:dev\" \"pnpm --filter purchase-orders-service start:dev\" \"pnpm --filter goods-receipts-service start:dev\" \"pnpm --filter qc-samples-service start:dev\" \"pnpm --filter qc-tests-service start:dev\" \"pnpm --filter qc-results-service start:dev\" \"pnpm --filter qa-releases-service start:dev\" \"pnpm --filter deviations-service start:dev\" \"pnpm --filter alerts-service start:dev\"",
    "start:dev:all": "concurrently \"pnpm start:dev:gateway\" \"pnpm start:dev:services\"",
    "start:infra": "docker-compose -f docker-compose-infra.yml up -d",
    "start:infra:down": "docker-compose -f docker-compose-infra.yml down",
    "seed": "ts-node -r tsconfig-paths/register scripts/seed.ts",
    "prettier": "prettier --write \"src/**/*.json\"",
    "lint": "eslint \"{src,test}/**/*.{ts,js}\" --fix",
    "test": "jest --config=\"./jest.config.ts\" --verbose --detectOpenHandles --forceExit",
    "test:cov": "jest --config=\"./jest-coverage.config.ts\" --coverage --detectOpenHandles && yarn make-badges",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "scaffold": "./node_modules/@mikemajesty/microservice-crud/bin/microservice-crud",
    "typeorm": "ts-node -r tsconfig-paths/register \"./node_modules/typeorm/cli.js\"",
    "migration-postgres:create": "yarn typeorm migration:create \"./src/infra/database/postgres/migrations/rename\"",
    "migration-postgres:run": "yarn typeorm migration:run -d ./src/infra/database/postgres/config --transaction none",
    "migration-postgres:undo": "yarn typeorm migration:revert -d ./src/infra/database/postgres/config --transaction none",
    "migration:run": "npm run migration-postgres:run",
    "test:load": "npx artillery run .artillery/config.yaml --record --key <token> ",
    "check-newest:deps": "npx npm-check-updates",
    "make-badges": "istanbul-badges-readme"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/typeorm": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/instrumentation-http": "^0.208.0",
    "@opentelemetry/instrumentation-pg": "^0.61.0",
    "@opentelemetry/instrumentation-redis-4": "^0.49.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "axios": "^1.13.2",
    "axios-better-stacktrace": "^2.1.7",
    "axios-retry": "^4.5.0",
    "body-parser": "^2.2.0",
    "class-validator": "^0.14.2",
    "colorette": "^2.0.20",
    "handlebars": "^4.7.8",
    "i18next": "^25.6.3",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "nestjs-convert-to-curl": "^1.0.7",
    "nestjs-i18n": "^10.5.1",
    "nestjs-otel": "^7.0.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.10",
    "opossum": "^9.0.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "ping": "^1.0.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-loki": "^2.6.0",
    "pino-pretty": "^13.1.2",
    "pm2": "^6.0.13",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "systeminformation": "^5.27.11",
    "ts-jest": "^29.4.5",
    "typeorm": "^0.3.27",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "5.9.3",
    "uuid": "^11.0.0",
    "v8": "^0.1.0",
    "write-excel-file": "^2.3.10",
    "yaml": "^2.8.1",
    "zod": "^4.1.12",
    "zod-i18n-map": "^2.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@mikemajesty/microservice-crud": "7.0.0",
    "@nestjs/cli": "^11.0.12",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.2",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@testcontainers/postgresql": "^11.8.1",
    "@testcontainers/redis": "^11.8.1",
    "@types/body-parser": "^1.19.6",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/opossum": "^8.1.9",
    "@types/ping": "^0.4.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@typespec/compiler": "^1.6.0",
    "artillery": "^2.0.27",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.14.0",
    "husky": "^9.1.7",
    "istanbul-badges-readme": "^1.9.0",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "4.2.0"
  }
}
