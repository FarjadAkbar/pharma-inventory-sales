{
  "name": "backend-microservices",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "pnpm install",
    "dev": "pnpm -r --parallel dev",
    "dev:gateway": "pnpm --filter api-gateway dev",
    "dev:user": "pnpm --filter user-service dev",
    "build": "pnpm -r build",
    "migration:generate": "pnpm --filter user-service migration:generate",
    "migration:run": "pnpm --filter user-service migration:run",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "prettier": "^3.1.0"
  }
}